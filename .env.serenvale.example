# Serenvale Server Configuration
# Copy this to .env.serenvale and update with your values

# Database
SERENVALE_DB_NAME=serenvale
POSTGRES_USER=serenvale
POSTGRES_PASSWORD=change_this_password_in_production

# MinIO (File Storage)
MINIO_PORT=9000
MINIO_ROOT_USER=serenvale
MINIO_ROOT_PASSWORD=change_this_password_in_production

# OpenAI API (for Whisper + GPT)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Application
# For desktop mode, NEXT_PUBLIC_DESKTOP_MODE=1
# For server mode, NEXT_PUBLIC_DESKTOP_MODE=0
NEXT_PUBLIC_DESKTOP_MODE=0
