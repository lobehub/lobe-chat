{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "module": "esnext",
    "paths": {
      // incase mixed with parent app
      "@/types/*": ["../../packages/types/src/*"],
      "@/const/*": ["../../packages/const/src/*", "./src/const/*"],
      "@/test/*": ["./test/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "global.d.ts"],
  "exclude": ["node_modules", "scripts/**"]
}
