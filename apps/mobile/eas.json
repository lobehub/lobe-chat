{
  "build": {
    "development": {
      "environment": "development",
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true,
        "config": "development-ios.yml"
      },
      "android": {
        "gradleCommand": ":app:assembleDebug",
        "config": "development-android.yml"
      },
      "pnpm": "10.10.0",
      "channel": "development"
    },
    "preview": {
      "environment": "preview",
      "distribution": "internal",
      "channel": "preview",
      "pnpm": "10.10.0",
      "ios": {
        "config": "preview-ios.yml"
      },
      "android": {
        "config": "preview-android.yml"
      }
    },
    "production": {
      "environment": "production",
      "autoIncrement": true,
      "channel": "production",
      "pnpm": "10.10.0",
      "ios": {
        "config": "production-ios.yml"
      },
      "android": {
        "config": "production-android.yml"
      }
    }
  },
  "cli": {
    "version": ">= 14.7.1",
    "appVersionSource": "remote"
  },
  "submit": {
    "production": {
      "ios": {
        "ascAppId": "6749615954"
      },
      "android": {
        "serviceAccountKeyPath": "./service-account-key.json"
      }
    }
  }
}
