{
  "name": "@lobechat/prompts",
  "version": "1.0.0",
  "private": true,
  "main": "./src/index.ts",
  "scripts": {
    "promptfoo:init": "promptfoo init",
    "promptfoo:view": "promptfoo view",
    "test": "vitest",
    "test:coverage": "vitest --coverage --silent='passed-only'",
    "test:prompts": "promptfoo eval",
    "test:prompts:ci": "NODE_OPTIONS=\"--import=tsx/esm\" promptfoo eval --no-cache --output-path results/ci-results.json",
    "test:prompts:summary": "NODE_OPTIONS=\"--import=tsx/esm\" promptfoo eval --output-path results/summary.json",
    "test:prompts:watch": "NODE_OPTIONS=\"--import=tsx/esm\" promptfoo eval --watch",
    "test:update": "vitest -u"
  },
  "dependencies": {
    "@lobechat/types": "workspace:*"
  },
  "devDependencies": {
    "promptfoo": "^0.118.11",
    "tsx": "^4.20.4"
  }
}
