{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": false,
  "dependencyDashboard": true,
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    "schedule:weekly",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
    ":semanticPrefixFixDepsChoreOthers",
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "workarounds:all"
  ],
  "ignoreDeps": [],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "groupName": "all non-minor dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackageNames": [
        "*"
      ],
      "matchUpdateTypes": [
        "patch"
      ]
    }
  ],
  "postUpdateOptions": [
    "yarnDedupeHighest"
  ],
  "prConcurrentLimit": 30,
  "prHourlyLimit": 0,
  "rangeStrategy": "bump",
  "rebaseWhen": "conflicted",
  "schedule": "on sunday before 6:00am",
  "timezone": "UTC"
}
